<li class="file-info">
  <%= file.name %> - <%= formatSize(file.size) %> - <%= new
  Date(file.uploadTime).toLocaleString() %>
  <div class="file-controlls">
    <div class="download-btn">
      <a
        href="/folders/<%= folder.id %>/<%= file.id %>/download"
        download="<%= file.name %>"
        >Download</a
      >
    </div>
    <div class="delete-file-btn">
      <form
        action="/folders/<%= folder.id %>/<%= file.id %>/delete"
        method="POST"
        onsubmit="return confirm('Delete this file?')"
      >
        <button
          class="icon-btn"
          type="submit"
          title="Delete"
          aria-label="Delete"
        >
          🗑️
        </button>
      </form>
    </div>
  </div>
</li>
