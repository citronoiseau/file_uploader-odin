<div class="folder">
  <div class="folder-info">
    <h2><%= folder.name %></h2>
    <% if (folder.File && folder.File.length > 0) { %>
    <ul>
      <% folder.File.forEach(file => { %> <%- include('../files/file', { file:
      file, folder: folder, formatSize: formatSize }) %> <% }) %>
    </ul>
    <% } else { %>
    <p>No files in this folder.</p>
    <% } %>
    <button class="upload-file-button" data-folder-id="<%= folder.id %>">
      Upload a new file
    </button>
  </div>
  <div class="folder-controls">
    <button
      class="share-folder-button"
      data-folder-id="<%= folder.id %>"
      data-folder-name="<%= folder.name %>"
    >
      ✉️
    </button>
    <button
      class="edit-folder-button"
      data-folder-id="<%= folder.id %>"
      data-folder-name="<%= folder.name %>"
    >
      ✏️
    </button>
    <form
      action="/folders/<%= folder.id %>/delete"
      method="POST"
      onsubmit="return confirm('Delete this folder? ALL FILES WILL BE DELETED')"
    >
      <button class="icon-btn" type="submit" title="Delete" aria-label="Delete">
        🗑️
      </button>
    </form>
  </div>
</div>
